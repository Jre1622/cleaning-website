<!-- Top Banner -->
<div class="bg-white py-4 shadow-bubble sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap items-center justify-between">
      <!-- Logo Container -->
      <div class="w-1/2 lg:w-1/3 flex items-center">
        <a href="/" class="flex items-center hover:opacity-90 transition duration-150">
          <img src="/images/logo.svg" alt="HomeCleanMN Logo" class="h-9 w-auto" />
          <span class="ml-3 text-xl font-heading font-bold">
            <span class="text-black">Home</span>
            <span class="text-clean-blue-600">Clean</span>
            <span class="text-aqua-500">MN</span>
          </span>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="lg:hidden flex items-center">
        <button id="mobile-menu-button" class="text-gray-600 hover:text-clean-blue-600 focus:outline-none">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Navigation -->
      <nav id="navigation" class="hidden lg:flex w-full lg:w-2/3 mt-4 lg:mt-0">
        <ul class="flex flex-col lg:flex-row w-full lg:justify-end space-y-2 lg:space-y-0 lg:space-x-6">
          <li><a href="/" class="block py-2 text-gray-600 hover:text-clean-blue-600 <%= active === 'home' ? 'text-clean-blue-600 font-semibold' : '' %>">Home</a></li>
          <li><a href="/services" class="block py-2 text-gray-600 hover:text-clean-blue-600 <%= active === 'services' ? 'text-clean-blue-600 font-semibold' : '' %>">Services</a></li>
          <li><a href="/about" class="block py-2 text-gray-600 hover:text-clean-blue-600 <%= active === 'about' ? 'text-clean-blue-600 font-semibold' : '' %>">About</a></li>
          <li class="lg:ml-2">
            <a
              href="/contact"
              class="block py-2 px-4 rounded-lg bg-clean-blue-500 text-white hover:bg-clean-blue-600 transition-colors duration-200 <%= active === 'contact' ? 'bg-clean-blue-600' : '' %>"
              >Contact Us</a
            >
          </li>
        </ul>
      </nav>
    </div>
  </div>
</div>

<!-- Mobile Menu (Hidden by default) -->
<div id="mobile-menu" class="lg:hidden bg-white shadow-md hidden">
  <div class="container mx-auto px-4 py-3">
    <ul class="space-y-2">
      <li><a href="/" class="block py-2 px-4 text-gray-600 hover:text-clean-blue-600 <%= active === 'home' ? 'text-clean-blue-600 font-semibold' : '' %>">Home</a></li>
      <li><a href="/services" class="block py-2 px-4 text-gray-600 hover:text-clean-blue-600 <%= active === 'services' ? 'text-clean-blue-600 font-semibold' : '' %>">Services</a></li>
      <li><a href="/about" class="block py-2 px-4 text-gray-600 hover:text-clean-blue-600 <%= active === 'about' ? 'text-clean-blue-600 font-semibold' : '' %>">About</a></li>
      <li>
        <a
          href="/contact"
          class="block py-2 px-4 my-2 rounded-lg bg-clean-blue-500 text-white hover:bg-clean-blue-600 transition-colors duration-200 <%= active === 'contact' ? 'bg-clean-blue-600' : '' %>"
          >Contact Us</a
        >
      </li>
    </ul>
  </div>
</div>

<!-- Mobile Menu JavaScript -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");
    const navigation = document.getElementById("navigation");

    mobileMenuButton.addEventListener("click", function () {
      navigation.classList.toggle("hidden");
      mobileMenu.classList.toggle("hidden");
    });
  });
</script>
