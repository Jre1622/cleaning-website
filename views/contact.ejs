<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <meta name="description" content="<%= description %>" />
    <link rel="canonical" href="<%= canonical %>" />
    <link rel="stylesheet" href="/output.css" />
    <%- include('partials/social-meta') %> <%- include('partials/structured-data') %>
  </head>
  <body class="bg-gray-50 min-h-screen flex flex-col">
    <%- include('partials/header', { active }) %>

    <main class="flex-grow">
      <!-- Contact page content goes here -->
      <div class="container mx-auto px-4 py-8">
        <div class="max-w-5xl mx-auto">
          <h1 class="text-3xl font-bold mb-6">Contact Us</h1>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Contact Information -->
            <div>
              <div class="bg-white p-6 rounded-lg shadow-md mb-6">
                <h2 class="text-xl font-semibold mb-4">Our Information</h2>

                <div class="space-y-4">
                  <div class="flex items-start">
                    <div class="text-blue-600 mt-1 mr-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-medium">Address</h3>
                      <p class="text-gray-600">123 Maple Grove Parkway<br />Maple Grove, MN 55369</p>
                    </div>
                  </div>

                  <div class="flex items-start">
                    <div class="text-blue-600 mt-1 mr-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                        />
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-medium">Phone</h3>
                      <p class="text-gray-600"><a href="tel:7635551234" class="hover:text-blue-600">763-555-1234</a></p>
                    </div>
                  </div>

                  <div class="flex items-start">
                    <div class="text-blue-600 mt-1 mr-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                        />
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-medium">Email</h3>
                      <p class="text-gray-600"><a href="mailto:info@homecleanmn.com" class="hover:text-blue-600">info@homecleanmn.com</a></p>
                    </div>
                  </div>

                  <div class="flex items-start">
                    <div class="text-blue-600 mt-1 mr-3">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                    <div>
                      <h3 class="font-medium">Business Hours</h3>
                      <p class="text-gray-600">Monday - Friday: 8:00 AM - 5:00 PM<br />Saturday - Sunday: Closed</p>
                    </div>
                  </div>
                </div>
              </div>

              <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-semibold mb-4">Find Us</h2>
                <div class="h-64 bg-gray-200 rounded">
                  <!-- Replace with actual map embed -->
                  <div class="w-full h-full flex items-center justify-center text-gray-500">[Google Map Embed]</div>
                </div>
              </div>
            </div>

            <!-- Contact Form -->
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h2 class="text-xl font-semibold mb-4">Send Us a Message</h2>

              <% if (typeof success !== 'undefined') { %>
              <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4"><%= success %></div>
              <% } %>

              <form action="/contact" method="POST">
                <div class="mb-4">
                  <label for="name" class="block text-gray-700 font-medium mb-2">Your Name</label>
                  <input type="text" id="name" name="name" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                </div>

                <div class="mb-4">
                  <label for="email" class="block text-gray-700 font-medium mb-2">Your Email</label>
                  <input type="email" id="email" name="email" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                </div>

                <div class="mb-4">
                  <label for="phone" class="block text-gray-700 font-medium mb-2">Phone Number</label>
                  <input type="tel" id="phone" name="phone" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>

                <div class="mb-4">
                  <label for="subject" class="block text-gray-700 font-medium mb-2">Subject</label>
                  <select id="subject" name="subject" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                    <option value="">Select a subject</option>
                    <option value="General Inquiry">General Inquiry</option>
                    <option value="Quote Request">Quote Request</option>
                    <option value="Feedback">Feedback</option>
                    <option value="Other">Other</option>
                  </select>
                </div>

                <div class="mb-6">
                  <label for="message" class="block text-gray-700 font-medium mb-2">Your Message</label>
                  <textarea id="message" name="message" rows="5" class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required></textarea>
                </div>

                <button type="submit" class="bg-blue-600 text-white py-2 px-6 rounded-lg hover:bg-blue-700 transition duration-200">Send Message</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include('partials/footer') %>
  </body>
</html>
